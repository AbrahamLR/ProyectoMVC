@using udemyMVC.Models
@model List<MarcaCLS>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("Agregar", "Agregar", "Marca", null, new { @class = "btn btn-primary" })
@Html.ActionLink("PDF", "generaPDF", "Marca", null, new { @class = "btn btn-primary", @target = "_blank" })
@Html.ActionLink("Excel", "generarExcel", "Marca", null, new { @class = "btn btn-primary", @target = "_blank" })
@using (Html.BeginForm("Index", "Marca", FormMethod.Post))
{
    @Html.Label("Ingrese nombre marca:")
    @Html.TextBox("nombre")
    <input type="submit" class="btn-success" value="Buscar" />

    <table class="table table-bordered table-hover">
        <thead>
            @*cabecera de tabla*@
            <tr>
                <td width="10%">@Html.LabelFor(p => Model[0].idmarca)</td>
                <td width="20%">@Html.LabelFor(p => Model[0].nombre)</td>
                <td width="60%">@Html.LabelFor(p => Model[0].descripcion)</td>
                <td width="10%">Operaciones</td>

            </tr>
        </thead>
        <tbody>
            @*cuerpo de tabla*@
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.idmarca</td>
                    <td>@item.nombre</td>
                    <td>@item.descripcion</td>
                    <td>
                        @Html.ActionLink(" ", "Editar", "Marca", new { id = @item.idmarca }, new { @class = "glyphicon glyphicon-edit bnt-primary" })  @*pasa el parametro id al editar*@
                        @Html.ActionLink(" ", "Eliminar", "Marca", new { id = @item.idmarca }, new { @class = "glyphicon glyphicon-trash btn-danger", @onclick = "Eliminar()" })

                    </td>
                </tr>
            }

        </tbody>
    </table>
}

<script>
    function Eliminar() {
        if (confirm("¿Desea eliminar marca?") == 1) {
            alert("Marca Eliminada");
        }
        else {
            event.preventDefault();
        }
    }
</script>
