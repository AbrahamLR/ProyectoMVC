@model List<udemyMVC.Models.PaginaCLS>

<table class="table">
    <tr>
        <th>
            @Html.LabelFor(model => Model[0].idPagina)
        </th>
        <th>
            @Html.LabelFor(model => Model[0].mensaje)
        </th>
        <th>
            @Html.LabelFor(model => Model[0].accion)
        </th>
        <th>
            @Html.LabelFor(model => Model[0].controlador)
        </th>

        <th>Operaciones</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idPagina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mensaje)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.accion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.controlador)
        </td>
        <td>
            <button type="button" onclick="Editar(@item.idPagina)" class="btn btn-primary glyphicon glyphicon-edit" data-toggle="modal" data-target="#exampleModal">
                Editar
            </button>

        </td>
        <td>
            <button type="button" onclick="Eliminar(@item.idPagina)" class="btn btn-danger glyphicon glyphicon-trash" data-toggle="modal" data-target="#ModalElimina">
                Eliminar
            </button>
        </td>

    </tr>
    }

</table>
