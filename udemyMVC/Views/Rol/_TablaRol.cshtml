@using udemyMVC.Models
@model List<RolCLS>

<table class="table-bordered table-hover">
    <thead>
        <tr>
            <td>@Html.LabelFor(p => Model[0].idRol)</td>
            <td>@Html.LabelFor(p => Model[0].nombre)</td>
            <td>@Html.LabelFor(p => Model[0].descripcion)</td>
            <td>Operaciones</td>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.idRol</td>
            <td>@item.nombre</td>
            <td>@item.descripcion</td>
            <td>
                <button type="button" onclick="Editar(@item.idRol)" class="btn btn-primary glyphicon glyphicon-edit" data-toggle="modal" data-target="#exampleModal">
                    Editar
                </button>
            </td>
            <td>
                <button type="button" onclick="Eliminar(@item.idRol)" class="btn btn-danger glyphicon glyphicon-trash" data-toggle="modal" data-target="#ModalElimina">
                    Eliminar
                </button>
            </td>
        </tr>
        }
    </tbody>


</table>