@using udemyMVC.Models
@model SucursalCLS
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>
<div class="col-md-6">
    @using (Html.BeginForm("Editar", "Sucursal", FormMethod.Post, new { @id = "frmEdit" }))
    {
        <div>
            @Html.LabelFor(p => p.idSucursal)
            @Html.TextBoxFor(p => p.idSucursal, new { @class = "hidden", @readonly = true })

        </div>
        <br />
        <div>
            @Html.LabelFor(p => p.nombre)
            @Html.TextBoxFor(p => p.nombre, new { @class = "form-control" })
        </div>
        <div>
            @Html.LabelFor(p => p.direccion)
            @Html.TextBoxFor(p => p.direccion, new { @class = "form-control" })
        </div>
        <div>
            @Html.LabelFor(p => p.telefono)
            @Html.TextBoxFor(p => p.telefono, new { @class = "form-control" })
        </div>
        <div>
            @Html.LabelFor(p => p.email)
            @Html.TextBoxFor(p => p.email, new { @class = "form-control" })
            @Html.ValidationMessage("email", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(p => p.fechaApertura)
            @Html.EditorFor(p => p.fechaApertura, new { htmlAttribute = new { @class = "form-control" } })
        </div>
        <br />
        <div style="margin:auto">
            <input type="submit" value="Editar" />
        </div>
    }
</div>
<script>
    var frmedit = document.getElementById("frmEdit");
    frmedit.onsubmit = function (e)
    {
        e.preventDefault();
        if (confirm("¿Desea guardar los cambios") == 1)
        {
            frmedit.submit();
        }
    }

</script>
